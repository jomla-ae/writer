<odoo>
    <record id="view_writer_product_category_filter" model="ir.ui.view">
        <field name="name">view.writer.product.category.filter</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="writer_id"/>
            </xpath>

            <xpath expr="//filter[@name='group_by_state']" position="before">
                <filter name="group_by_writer_id" string="Writer" domain="[]" context="{'group_by':'writer_id'}"/>
                <separator/>
            </xpath>
        </field>
    </record>

    <record id="view_writer_product_category_tree" model="ir.ui.view">
        <field name="name">view.writer.product.category.tree</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="writer_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_writer_product_category_form" model="ir.ui.view">
        <field name="name">view.writer.product.category.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']/.." position="after">
                <group name="writer_group" col="2">
                    <field name="writer_id" class="oe_inline" options="{'no_open':True,'no_create':True}"/>
                </group>
            </xpath>
        </field>
    </record>


    <record id="view_writer_product_category_edit_tree" model="ir.ui.view">
        <field name="name">view.writer.product.category.edit.tree</field>
        <field name="model">product.category</field>
        <field name="arch" type="xml">
            <tree string="Writer Product Category" create="0" delete="0">
                <field name="name" string="Category Name"/>
                <field name="parent_id"/>
                <field name="writer_id" optional="show"/>
                <field name="state" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_writer_product_category_edit_form" model="ir.ui.view">
        <field name="name">view.writer.product.category.edit.form</field>
        <field name="model">product.category</field>
        <field name="arch" type="xml">
            <form string="Writer Product Category" create="0" delete="0">
                <header>
                    <button name="action_submit" string="Submit" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_approve" string="Approve" type="object" states="to_reviewed"
                            class="oe_highlight" groups="stock.group_stock_manager"/>
                    <button name="action_publish" string="Publish" type="object" states="approved" class="oe_highlight"
                            groups="stock.group_stock_manager"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                            states="to_reviewed,approved,published" class="oe_highlight"
                            groups="stock.group_stock_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_reviewed,approved,published"/>
                </header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <label for="name" string="Category"/>
                        <h1>
                            <field name="name" placeholder="e.g. Lamps"/>
                        </h1>
                    </div>

                    <group>
                        <field name="writer_id" options="{'no_open':True,'no_create':True}" readonly="1"/>
                    </group>

                    <group>
                        <field name="seo_title"/>
                        <field name="seo_description"/>
                        <field name="description"/>
                        <field name="meta_description"/>
                    </group>

                    <notebook>
                        <page name="faqs" string="FAQs">
                            <field name="faq_ids">
                                <tree editable="bottom">
                                    <field name="quotation"/>
                                    <field name="answer"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_writer_product_categories" model="ir.actions.act_window">
        <field name="name">Product Categories</field>
        <field name="res_model">product.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_writer_product_categories_tree" model="ir.actions.act_window.view">
        <field eval="0" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="writer.view_writer_product_category_edit_tree"/>
        <field name="act_window_id" ref="writer.action_writer_product_categories"/>
    </record>

    <record id="action_writer_product_categories_form" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="writer.view_writer_product_category_edit_form"/>
        <field name="act_window_id" ref="writer.action_writer_product_categories"/>
    </record>
</odoo>