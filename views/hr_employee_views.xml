<odoo>
    <record id="view_writer_hr_employee_form" model="ir.ui.view">
        <field name="name">view.writer.hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_get_writer_commission_lines"
                        icon="fa-credit-card" attrs="{'invisible': [('writer_commission_line_count','=',0)]}">
                    <field string="Writer Commission Lines" name="writer_commission_line_count" widget="statinfo"/>
                </button>
            </xpath>

            <xpath expr="//field[@name='coach_id']" position="after">
                <field name="is_writer"/>
            </xpath>
        </field>
    </record>

    <record id="action_hr_employee_writers" model="ir.actions.act_window">
        <field name="name">Writers</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="domain">[("is_writer","=",True)]</field>
        <field name="context">{"default_is_writer": True}</field>
        <field name="search_view_id" ref="hr.view_employee_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Writer
            </p>
        </field>
    </record>
</odoo>