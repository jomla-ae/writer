<odoo>
    <record id="view_assign_writer_form" model="ir.ui.view">
        <field name="name">view.assign.writer.form</field>
        <field name="model">assign.writer</field>
        <field name="arch" type="xml">
            <form string="Assign Vendor Writer">
                <sheet>
                    <group>
                        <group>
                            <field name="writer_id" options="{'no_open':True,'no_create':True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_assign_writer" string="Assign" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_assign_writer_wizard" model="ir.actions.act_window">
        <field name="name">Assign Writer</field>
        <field name="res_model">assign.writer</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="writer.view_assign_writer_form"/>
        <field name="target">new</field>
    </record>


    <record id="action_assign_writer_product_template_server" model="ir.actions.server">
        <field name="name">Assign Writer</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records._action_assign_writer()</field>
    </record>


    <record id="action_assign_writer_product_category_server" model="ir.actions.server">
        <field name="name">Assign Writer</field>
        <field name="model_id" ref="product.model_product_category"/>
        <field name="binding_model_id" ref="product.model_product_category"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records._action_assign_writer()</field>
    </record>
</odoo>